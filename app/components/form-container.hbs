<div class="flex items-center user-auth-form">
  <div>
    <Logo class="cursor-pointer inline w-16" />

    <div class="shadow form-container mx-auto pb-10 pt-2 mt-5 form-container">
      <form class="mt-6">
        <h3 class="text-lg my-3 px-3"> {{@title}} </h3>

        {{yield}}
      </form>
    </div>

    <div class="mt-5 text-gray-600">
      {{@secondaryCTA.msg}} 
      <LinkTo @route={{@secondaryCTA.route}} class="text-blue-600 cursor-pointer">
        {{@secondaryCTA.label}}
      </LinkTo>
    </div>
  </div>
</div>
